<h4><%= @trip.name %></h4>
<p>
  <% @trip.categories.each do |c| %>
    <span class="label label-primary"><%= c.name %></span>
  <% end %>
</p>
<p><strong>Date:</strong> <%= @trip.date %></p>
<% if @trip.travel_partners.present? %>
  <p><strong>Travel Partners:</strong> <%= @trip.travel_partners.map(&:name).join(", ") %></p>
<% end %>
<p><strong>Countries:</strong> <span id="countryNames"><%= @trip.countries.map(&:name).join(", ") %></span></p>
<p><strong>Places:</strong> <%= @places.map(&:name).join(", ") %> <span id="placesInfo"><%= raw @places.pluck(:name, :latitude, :longitude).to_json %></span></p>
<% @photos.each_slice(2) do |photo_group| %>
  <div class="row">
  <% photo_group.each do |p| %>
    <div class="col-xs-6 col-md-6">
      <%= link_to image_tag(p.thumb_url), p.image_url, {"class": "thumbnail", "data-toggle": "lightbox", "data-gallery": "tripLightbox", "data-title": @trip.name, "data-footer": p.caption} %>
    </div>
  <% end %>
  </div>
<% end %>